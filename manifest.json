{
  "manifest_version": 3,
  "name": "Meeting Recorder & AI Insights",
  "version": "1.0",
  "description": "Grava áudio da aba, salva localmente e envia para API de transcrição.",
  "permissions": [
    "tabCapture",
    "offscreen"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gravar Reunião"
  },
  "background": {
    "service_worker": "background.js"
  }
}
